@page
@model PhoneNumberModel
@{
    ViewData["Title"] = "Update Phone Number";
}

<h2>Update Phone Number</h2>

<form id="update-phone-form" method="post">
    <div class="form-group">
        <label for="PhoneNumber">New Phone Number</label>
        <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" required pattern="\d{10}" title="Please enter a 10-digit phone number">
    </div>
    <button id="phone-number-submit" type="submit" class="btn btn-primary mt-3">Update</button>
</form>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["StatusMessage"]</div>
}

