@model project_wildfire_web.Models.DTO.ProfileViewModelDTO
@using project_wildfire_web.Areas.Identity.Pages.Account.Manage
@using project_wildfire_web.ExtensionsMethods


<!-- Stores users profile view model -->
<div id="profile-data" data-profile="@Json.Serialize(Model)"></div>

<div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="profileModalLabel">
            @if (Model == null)
            {
                @:Profile
            }
            else if (Model.UserInfo.FirstName == null && Model.UserInfo.LastName == null)
            {
                @Model.UserInfo.Email
            }
            else
            {
                @Model.UserInfo.FirstName@: @Model.UserInfo.LastName
            }
            
        </h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body pt-0" id="profileModalBody">
        @if (Model == null)
        {
            <p class="lead">Profile information not available. Please log in or create a profile.</p>
        }
        else
        {
            <div class="container">

                <div class="row">
                    <partial name="_UserInfoPartial" model="Model.UserInfo" />
                </div>
                
                <div class="row">
                    <partial name="_SavedLocationPartial" model="Model.SavedLocations" /> 
                </div>
                
                <div class="row">
                    <h4 class="mt-4"><u>Subscribed Fires</u></h4>
                    <div class="container ml-1">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <td><u>ID</u></td>
                                    <td><u>Name</u></td>
                                    <td><u>POOCounty</u></td>
                                    <td><u>POOState</u></td>
                                    <td><u>Status</u></td>
                                    <td><u>StartDate</u></td>
                                    <td><u>Acres Burned</u></td>
                                    <td><u>Percent Contained</u></td>
                                    <td><u>Actions</u></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @if (Model.FireSubscriptions == null || !Model.FireSubscriptions.Any())
                                    {
                                        <td>No fire subscriptions.</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    }
                                    else
                                    {
                                        @foreach (var fire in Model.FireSubscriptions)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="#" class="fire-jump" data-lat="@fire.Latitude" data-lng="@fire.Longitude">
                                                        @fire.FireId
                                                    </a>
                                                </td>
                                                
                                                <td>@fire.Name</td>
                                                <td>@fire.POOCounty</td>
                                                <td>@fire.POOState</td>
                                                <td>Active</td>
                                                <td>
                                                    @(fire.StartDate.HasValue 
                                                        ? fire.StartDate.Value.ToLocalTime().ToString("g") 
                                                        : "N/A")
                                                </td>                                                
                                                <td>@fire.AcreageBurned</td>
                                                <td>@fire.PercentageContained %</td>
                                                <td>
        
                                              <button class="btn btn-sm btn-danger unsubscribe-btn" data-fire-id="@fire.FireId">
                                                Unsubscribe
                                              </button>
                                            </td>
                                            </tr>
                                            
                                        }
                                    } 
                                </tr>
                                    
                            </tbody>
                        </table>
                    </div>  
                </div>
            </div>  
        }        
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script src="~/js/ProfilePartial/savedLocations.js"></script>
    <script src="~/js/ProfilePartial/userInformation.js"></script>
    <script>
      document.addEventListener('click', function (e) {
        if (e.target.matches('.unsubscribe-btn')) {
          var btn = e.target;
          var fireId = btn.getAttribute('data-fire-id');
          fetch('/api/fireSub/' + encodeURIComponent(fireId), {
            method: 'DELETE',
            credentials: 'include'
          })
            .then(function (response) {
              if (response.ok) {
                // Remove the subscription row from the table
                var row = btn.closest('tr');
                if (row) row.remove();
              } else {
                alert('Failed to unsubscribe from fire ' + fireId);
              }
            })
            .catch(function (err) {
              console.error(err);
              alert('Error unsubscribing from fire ' + fireId);
            });
        }
      });
    </script>
}